<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.CourseManagementSystem.repository.MajorRepository">
    <select id="findByIds" parameterType="int[]" resultType="com.example.CourseManagementSystem.model.entity.Major">
        SELECT * FROM majors WHERE id IN
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>